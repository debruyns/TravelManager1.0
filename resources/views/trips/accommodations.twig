{% extends 'templates/app.twig' %}

{% block content %}

{% include 'templates/tripHeader.twig' %}

<div class="card mx-auto" style="width: 70%;">
  <div class="card-header">
    <span class="align-middle">{{ trans('trips.accommodations.header') }}</span>
    <a href="{{ path_for('trips.accommodations.create', { id: trip.identifier }) }}" class="btn btn-primary btn-sm float-right">{{ trans('trips.accommodations.create') }}</a>
    <div class="clearfix"></div>
  </div>
  <div class="card-body">

    {% include 'templates/message.twig' %}

    {% if accommodations is not empty %}

      <table class="table table-hover table-sm">
        <thead class="thead-light">
          <tr>
            <th scope="col" style="width: 50%;" class="pl-3">{{ trans('trips.accommodations.name') }}</th>
            <th scope="col" style="width: 30%;">{{ trans('trips.accommodations.dates') }}</th>
            <th scope="col" style="width: 20%;"></th>
          </tr>
        </thead>
        <tbody>
          {% for accommodation in accommodations %}
            <tr>
              <td class="align-middle pl-3">{{ accommodation.name }}</td>
              <td class="align-middle">{{ accommodation.checkin | date('d/m/Y') }} - {{ accommodation.checkout | date('d/m/Y') }}</td>
              <td class="text-right pr-3 py-2">
                <a class="btn btn-secondary btn-sm" href="{{ path_for('trips.accommodations.details', { id: trip.identifier, accommodation: accommodation.identifier }) }}">{{ trans('trips.accommodations.details') }}</a>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>

    {% else %}

      <h6 class="text-muted">{{ trans('trips.accommodations.nofound') }}</h6>

    {% endif %}

  </div>
</div>

{% endblock %}
