{% extends 'templates/app.twig' %}

{% block content %}

<form class="form-auth" method="post" action="{{ path_for('auth.signup') }}" autocomplete="off">

  {% include 'templates/message.twig' %}

  <h1 class="h3 mb-3 font-weight-normal">{{ trans('auth.signup.header') }}</h1>

  <div class="form-group">
    <input type="text" name="firstname" class="form-control f-no-border {{ flash.getMessage('error_firstname') ? ' is-invalid' : '' }}" placeholder="{{ trans('input.label.firstname') }}" value="{{ persistInput.firstname }}">
    {% if flash.getMessage('error_firstname') %}
      <small class="text-danger">{{ flash.getMessage('error_firstname') | first }}</small>
    {% endif %}
  </div>

  <div class="form-group">
    <input type="text" name="lastname" class="form-control f-no-border {{ flash.getMessage('error_lastname') ? ' is-invalid' : '' }}" placeholder="{{ trans('input.label.lastname') }}" value="{{ persistInput.lastname }}">
    {% if flash.getMessage('error_lastname') %}
      <small class="text-danger">{{ flash.getMessage('error_lastname') | first }}</small>
    {% endif %}
  </div>

  <div class="form-group">
    <input type="text" name="email" class="form-control f-no-border {{ flash.getMessage('error_email') ? ' is-invalid' : '' }}" placeholder="{{ trans('input.label.email') }}" value="{{ persistInput.email }}">
    {% if flash.getMessage('error_email') %}
      <small class="text-danger">{{ flash.getMessage('error_email') | first }}</small>
    {% endif %}
  </div>

  <div class="form-group">
    <input type="password" name="password" class="form-control f-no-border {{ flash.getMessage('error_password') ? ' is-invalid' : '' }}" placeholder="{{ trans('input.label.password') }}">
    {% if flash.getMessage('error_password') %}
      <small class="text-danger">{{ flash.getMessage('error_password') | first }}</small>
    {% endif %}
  </div>

  <button class="btn btn-md btn-primary btn-block" type="submit">{{ trans('input.button.signup') }}</button>

  {{ csrf.fields | raw }}

</form>

{% endblock %}
