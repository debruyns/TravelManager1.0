{% extends 'templates/app.twig' %}

{% block content %}

{% include 'templates/tripHeader.twig' %}

<div class="card mx-auto" style="width: 70%;">
  <div class="card-header">{{ trans('trips.settings.header') }}</div>
  <div class="card-body">

    <form method="post">

      <div class="form-group">
        <label>Trip Name</label>
        <input type="text" class="form-control f-no-border" />
      </div>

      <div class="form-group">
        <label>Departure Date</label>
        <input type="text" class="form-control f-no-border date-format" />
      </div>

      <div class="form-group">
        <label>Return Date</label>
        <input type="text" class="form-control f-no-border" />
      </div>

      <div class="form-group">
        <label>Phase</label>
        <select class="form-control f-no-border">
          <option>Planning</option>
        </select>
      </div>

    </form>

  </div>
</div>

{% endblock %}
