{% extends 'templates/app.twig' %}

{% block content %}

<div class="card mt-5 mx-auto" style="width: 60%;">

  <div class="card-header">{{ trans('trips.create.title') }}</div>

  <div class="card-body">

    <form method="post" action="{{ path_for('trips.create') }}" autocomplete="off">

      <div class="form-group">
        <label for="name">{{ trans('trips.create.name') }}</label>
        <input type="text" class="form-control f-no-border" name="name" maxlength="20" placeholder="{{ trans('trips.create.namePlace') }}">
      </div>

      <div class="form-group">
        <label for="start">{{ trans('trips.create.start') }}</label>
        <input type="text" class="form-control f-no-border date-format" name="start" placeholder="{{ trans('trips.create.datePlace') }}">
      </div>

      <div class="form-group">
        <label for="stop">{{ trans('trips.create.stop') }}</label>
        <input type="text" class="form-control f-no-border date-format" name="stop" placeholder="{{ trans('trips.create.datePlace') }}">
      </div>

      <div class="form-group">
        <label for="type">{{ trans('trips.general.type') }}</label><br />
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="type" value="leisure">
            {{ trans('trips.type.leisure') }}
          </label>
        </div>
        <div class="form-check form-check-inline">
          <label class="form-check-label">
            <input class="form-check-input" type="radio" name="type" value="business">
            {{ trans('trips.type.business') }}
          </label>
        </div>
      </div>

      <div class="text-center mt-5">
        <button class="btn btn-primary" type="submit">{{ trans('input.button.create') }}</button>
      </div>

      {{ csrf.fields | raw }}

    </form>

  </div>

</div>

{% endblock %}
